{
  "name": "otus",
  "version": "0.1.0",
  "description": "An autonomous, local-first system engineering agent",
  "type": "module",
  "private": true,
  "bin": {
    "otus": "./dist/otus"
  },
  "scripts": {
    "build": "bun build src/cli/otus.ts --outdir dist --target bun",
    "build:agent": "cd src/agent-go && CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags='-s -w' -o ../../dist/otus-agent .",
    "dev": "bun src/cli/otus.ts",
    "setup:network": "sudo ./infra/setup-tap-pool.sh",
    "check:network": "sudo ./infra/check-tap-pool.sh",
    "remove:network": "sudo ./infra/remove-tap-pool.sh",
    "test": "bun test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@lancedb/lancedb": "^0.24.1",
    "commander": "^12.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
