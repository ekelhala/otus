{
  "name": "otus",
  "version": "0.1.0",
  "description": "An autonomous, local-first system engineering agent",
  "type": "module",
  "private": true,
  "bin": {
    "otus": "./dist/otus"
  },
  "scripts": {
    "build": "OTUS_ENV=production bun build src/cli/otus.ts --compile --outfile dist/otus --env inline",
    "build:agent": "cd src/agent-go && make build",
    "dev": "bun src/cli/otus.ts",
    "daemon": "bun run src/daemon/main.ts",
    "setup:network": "sudo ./infra/setup-tap-pool.sh",
    "check:network": "sudo ./infra/check-tap-pool.sh",
    "remove:network": "sudo ./infra/remove-tap-pool.sh",
    "test": "bun test",
    "test:unit": "bun test -t 'parseIgnoreFile|tar exclude'",
    "test:integration": "bun test --timeout 60000 -t 'VM Sync'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@lancedb/lancedb": "^0.24.1",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "ora": "^9.3.0",
    "prompts": "^2.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
